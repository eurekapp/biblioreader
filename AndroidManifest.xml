<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.eurekapp.bibliopedia"
      android:versionName="1"
      android:versionCode="1"
      android:installLocation="auto">
    
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.eurekapp.bibliopedia.Bibliopedia"
        android:description="@string/app_desc"
        android:icon="@mipmap/escolar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        
        <receiver android:name="org.eurekapp.bibliopedia.activity.MediaButtonReceiver" >
        	<intent-filter android:priority="10000" >
            	<action android:name="android.intent.action.MEDIA_BUTTON" />
        	</intent-filter>
    	</receiver>
        
        <activity
            android:name="org.eurekapp.bibliopedia.activity.ReadingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:mimeType="application/epub+zip" />
                <data android:pathPattern=".*\\.epub" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.eurekapp.bibliopedia.activity.PageTurnerPrefsActivity"
            android:label="@string/prefs" />
        <activity
            android:name="org.eurekapp.bibliopedia.activity.LibraryActivity"
            android:label="@string/library" />
        <activity
            android:name="org.eurekapp.bibliopedia.activity.FileBrowseActivity"
            android:label="@string/browse" />

        <activity
                android:name="org.eurekapp.bibliopedia.activity.CatalogBookDetailsActivity"
                android:label="@string/book_details" >

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="epub" />
            </intent-filter>

        </activity>
        
        <activity
            android:name="org.eurekapp.bibliopedia.activity.CatalogActivity"
            android:label="@string/download" />
        
        <activity
            android:name="org.eurekapp.bibliopedia.activity.ManageSitesActivity"
            android:label="@string/pref_manage_sites" >
                   
        	<intent-filter>
           		<action android:name="org.eurekapp.bibliopedia.activity.ManageSitesActivity" />
           		<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>        
        
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
       
    </application>

</manifest>
